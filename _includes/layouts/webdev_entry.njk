---
layout: layouts/base.njk
section: webdev
---

<article>
  <h1>{{ title }}</h1>
  <img src="{{ webdev.data.image }}" alt="{{ webdev.data.title }}: web development by David Rhoden" />
  {{ layoutContent | safe }}

  {% if tags %}
    <p>
    {% for tag in tags %}
      {%- if tag != "webdev" -%}
        {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
      {%- endif -%}
    {% endfor %}
    </p>
  {% endif %}

</article>

<nav>
  <a href="{{ '/webdev/' | url }}">← Web Development index</a>
</nav>
